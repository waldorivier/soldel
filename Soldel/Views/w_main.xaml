<Window x:Class="Soldel.Views.w_main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MLFOOD" Height="300" Width="300">
        <Grid x:Name ="g_main" Background = "LightGray" Margin = "5,10,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel>
                <Button x:Name="btn_meal" Content="Saisie repas"/>
                <Button x:Name="btn_food" Content="Configurer liste aliments"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
